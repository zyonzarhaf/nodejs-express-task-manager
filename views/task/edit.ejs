<main>
  <section class="py-4 container">
    <div class="py-4 d-flex justify-content-center">
      <div>
        <h4 class="py-2 text-center text-capitalize text-white bg-dark rounded-top">
          edit task
        </h4>
        <form class="p-4 shadow rounded-bottom" action="/user/<%= user.id %>/tasks/<%= task._id %>/edit?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="description" class="form-label text-capitalize">
              description
            </label>
            <input type="text" class="form-control" name="description" id="description" value="<%= task.description %>">
          </div>
          <div class="d-flex mb-3">
            <div class="mb-3 me-3">
              <label for="priority" class="form-label text-capitalize">
                priority
              </label>
              <select class="form-select" name="priority" id="priority"> 
                <option value="low" <%= task.priority === "low" && 'selected' %>>low</option>
                <option value="medium" <%= task.priority === "medium" && 'selected' %>>medium</option>
                <option value="high" <%= task.priority === "high" && 'selected' %>>high</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="due" class="form-label text-capitalize">
                due
              </label>
              <input type="date" class="form-control" name="due" id="due" value="<%= task.due %>"> 
            </div>
          </div>
          <div class="mb-3">
            <label for="project" class="form-label text-capitalize">
              project
            </label>
            <input type="text" class="form-control" name="project" id="project" value="<%= task.project %>"> 
          </div>
          <div class="w-50 mb-3">
            <label class="form-label text-capitalize">
              status
            </label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" value="none">
              <label class="form-check-label text-capitalize" for="status">
                none
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" value="started">
              <label class="form-check-label text-capitalize" for="status">
                started
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" value="finished">
              <label class="form-check-label text-capitalize" for="status">
                finished
              </label>
            </div>
          </div>
          <div class="mt-5 text-center">
            <button type="submit" class="btn btn-dark text-capitalize">
              update
            </button>
            <a href="/user/<%= user.id %>/tasks" class="btn btn-dark text-capitalize"> 
              cancel
            </a>
            <a 
              href="/user/<%= user.id %>/tasks/<%= task._id %>/edit?_method=DELETE"
              class="btn btn-danger text-capitalize"
              onclick="return confirm('are you sure you want to delete this task?')"
            >
              delete 
            </a>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>
