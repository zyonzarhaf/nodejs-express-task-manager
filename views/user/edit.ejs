<main>
  <%if (flashMessage.error) {%>
  <h4 class="py-4 text-center bg-danger text-white">
    <%=flashMessage.error%>
  </h4>
  <%}%>
  <%if (flashMessage.success) {%>
  <h4 class="py-4 text-center bg-success text-white">
    <%=flashMessage.success%>
  </h4>
  <%}%>
  <section class="py-4 container">
    <div class="py-4 d-flex justify-content-center">
      <div>
        <h4 class="py-2 text-center text-capitalize text-white bg-dark rounded-top">
          edit account
        </h4>
        <form class="p-4 shadow rounded-bottom" action="/user/<%= user._id %>/account/edit?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="last" class="form-label">
              first name
            </label>
            <input type="text" class="form-control" name="first" id="first" value="<%=user.name.first%>" />
          </div>
          <div class="mb-3">
            <label for="last" class="form-label">
              last name
            </label>
            <input type="text" class="form-control" name="last" id="last" value="<%=user.name.last%>" />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">
              email address
            </label>
            <input type="email" class="form-control" name="email" id="email" value="<%=user.email%>" />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">
              password
            </label>
            <input type="password" class="form-control" name="password" id="password" value="<%=user.password%>" />
          </div>
          <div class="mt-5 text-center">
            <button type="submit" class="btn btn-dark text-capitalize">
              update
            </button>
            <a href="/user/<%= user.id %>/tasks" class="btn btn-dark text-capitalize">
              cancel
            </a>
            <a href="/user/<%= user.id %>/account/edit?_method=DELETE" class="btn btn-danger text-capitalize" onclick="return confirm('are you sure you want to delete this account?')">
              delete account
            </a>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>
